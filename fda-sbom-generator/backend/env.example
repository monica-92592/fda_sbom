# Backend Environment Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fda_sbom
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CVE API Configuration
CVE_API_KEY=your-cve-api-key-here
NVD_API_KEY=your-nvd-api-key-here

# Application Settings
APP_NAME=FDA SBOM Generator
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
BCRYPT_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# External Services
NVD_BASE_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
MITRE_BASE_URL=https://cve.mitre.org/cgi-bin/cvename.cgi
PYPI_BASE_URL=https://pypi.org/pypi
NPM_BASE_URL=https://registry.npmjs.org

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.json,.xml,.txt,.zip

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090


